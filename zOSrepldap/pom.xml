<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>commonldap.runtime-jar</groupId>
	<artifactId>zOSrepldap</artifactId>
	<version>latest</version>
	<packaging>jar</packaging>

	<name>zOSrepldap</name>
	<url>http://maven.apache.org</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven.compiler.source>1.8</maven.compiler.source>
		<maven.compiler.target>1.8</maven.compiler.target>
	</properties>

	<dependencies>
		<!-- https://mvnrepository.com/artifact/org.json/json -->
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20171018</version>
		</dependency>
		<!-- https://mvnrepository.com/artifact/javax.mail/mail -->
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4</version>
		</dependency>
		<!-- http://isl-dsdc.ca.com/artifactory/maven-third-party-local -->
		<dependency>
			<groupId>com.microsoft.sqlserver</groupId>
			<artifactId>sqljdbc4</artifactId>
			<version>1.0</version>
		</dependency>
		<!-- http://isl-dsdc.ca.com/artifactory/p2-local -->
		<dependency>
			<groupId>commonldap.shared</groupId>
			<artifactId>commonldap</artifactId>
			<version>3.4</version>
		</dependency>
		<dependency>
			<groupId>commonldap.library</groupId>
			<artifactId>db2jcc</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>commonldap.library</groupId>
			<artifactId>db2jcc_license_cu</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>commonldap.library</groupId>
			<artifactId>db2jcc_license_cisuz</artifactId>
			<version>1.0</version>
		</dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>sqljdbc4</id>
			<url>http://isl-dsdc.ca.com/artifactory/maven-third-party-local/</url>
		</repository>
		<repository>
			<id>commonldap</id>
			<url>http://isl-dsdc.ca.com/artifactory/p2-local/</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<archive>
						<manifest>
							<mainClass>commonldap.zOSrepldap.ZOSRepLdap</mainClass>
						</manifest>
					</archive>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
